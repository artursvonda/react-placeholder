{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "outDir": "./lib/ts",
    "baseUrl": ".",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "jsx": "react",
    "lib": [
      "dom", "es6"
    ]
  },
  "include": [
    "src/*",
    "typings"
  ]
}
