{
  "name": "react-pure-placeholder",
  "version": "0.1.0",
  "description": "A React components to provide placeholders while content is loading",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "browser": "lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "dist": "NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "pretest": "npm run build",
    "test": "jest",
    "preversion": "yarn test",
    "prepublish": "yarn build",
    "start": "styleguidist server",
    "typecheck": "tsc --noEmit",
    "release-version": "smooth-release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:artursvonda/react-placeholder"
  },
  "keywords": [
    "react",
    "react-component",
    "placeholder",
    "filler",
    "loading",
    "paragraph"
  ],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "maintainers": [
    "Arturs Vonda <react-placeholder@artursvonda.lv>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artursvonda/react-placeholder/issues"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/artursvonda/react-placeholder",
  "typings": "lib",
  "dependencies": {
    "prop-types": "^15.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24",
    "@types/node": "^10",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.10",
    "babel-preset-buildo": "^0.1.1",
    "bundlesize": "^0.17.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^24",
    "node-sass": "^4.8.3",
    "prettier": "^1.18.2",
    "raf": "^3.4.0",
    "react": "^16",
    "react-docgen-typescript": "^1.1.0",
    "react-dom": "^16",
    "react-test-renderer": "^16.2.0",
    "rollup": "^1.15.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "smooth-release": "^8.0.4",
    "ts-jest": "^24",
    "ts-loader": "^6.0.2",
    "tslib": "^1.10.0",
    "typescript": "3.5.x"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15 || ^16",
    "react-dom": "^0.14 || ^15 || ^16"
  },
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "bundlesize": [
    {
      "path": "./lib/index.js",
      "maxSize": "1.3 kB"
    },
    {
      "path": "./lib/cjs/index.js",
      "maxSize": "0.8 kB"
    },
    {
      "path": "./lib/es/index.js",
      "maxSize": "0.6 kB"
    }
  ],
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.*[.](test))[.](tsx?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
