{
  "name": "react-pure-placeholder",
  "version": "0.3.0",
  "description": "A React components to provide placeholders while content is loading",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "browser": "lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c && yarn types && yarn build-storybook",
    "dev": "rollup -c -w",
    "prepublish": "yarn build",
    "typecheck": "tsc --noEmit",
    "types": "tsc --emitDeclarationOnly",
    "release-version": "smooth-release",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "rimraf docs && build-storybook -c .storybook -o docs"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:artursvonda/react-pure-placeholder.git"
  },
  "keywords": [
    "react",
    "react-component",
    "placeholder",
    "filler",
    "loading",
    "paragraph"
  ],
  "author": "Francesco Cioria <francesco@buildo.io>",
  "maintainers": [
    "Arturs Vonda <react-placeholder@artursvonda.lv>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artursvonda/react-pure-placeholder/issues"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/artursvonda/react-pure-placeholder",
  "typings": "lib",
  "dependencies": {
    "prop-types": "^15.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-info": "^5.1.8",
    "@storybook/addon-knobs": "^5.1.8",
    "@storybook/addons": "^5.1.8",
    "@storybook/react": "^5.1.8",
    "@types/enzyme": "^3.9.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^10",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.10",
    "@types/storybook__addon-knobs": "^5.0.1",
    "@types/storybook__react": "^4.0.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "bundlesize": "^0.17.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "raf": "^3.4.0",
    "react": "^16",
    "react-docgen-typescript": "^1.1.0",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16",
    "react-test-renderer": "^16.2.0",
    "rollup": "^1.15.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-babel-minify": "^8.0.0",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "smooth-release": "^8.0.4",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "3.5.x"
  },
  "peerDependencies": {
    "react": "^0.14 || ^15 || ^16",
    "react-dom": "^0.14 || ^15 || ^16"
  },
  "types": "lib/ts/index.d.ts",
  "browserslist": [
    "last 1 version",
    "> 1%"
  ],
  "bundlesize": [
    {
      "path": "./lib/index.js",
      "maxSize": "1.3 kB"
    },
    {
      "path": "./lib/cjs/index.js",
      "maxSize": "0.8 kB"
    },
    {
      "path": "./lib/es/index.js",
      "maxSize": "0.6 kB"
    }
  ],
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "jest": {
    "testURL": "http://localhost",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.*[.](test))[.](tsx?)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  }
}
